import os, subprocess
Import('env')

## source files
env.LIBS["thirdparty"] += [
	File('imgui.cpp'),
	File('imgui_draw.cpp'),
	File('imgui_demo.cpp'),
	File('imgui_widgets.cpp'),

	File('imgui_impl_opengl3.cpp'),

	#File('misc/cpp/imgui_stdlib.cpp'),
	#File('misc/fonts/binary_to_compressed_c.cpp'),
	#File('misc/freetype/imgui_freetype.cpp'),
	#File('misc/freetype/imgui_freetype.cpp'),
]

if env.GL_LOADER == 'SDL':
	env.LIBS['thirdparty'] += [ File('imgui_impl_sdl.cpp') ]
elif env.GL_LOADER == 'GLFW':
	env.LIBS['thirdparty'] += [ File('imgui_impl_glfw.cpp') ]
